@{
    ViewData["Title"] = "Access Denied";
    Layout = null; // No shared layout applied

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #f5f0ff 0%, #e0e7ff 100%);
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .error-card {
        background: white;
        border-radius: 32px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
        padding: 60px 40px;
        width: 100%;
        max-width: 500px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.8);
    }

    .icon-container {
        width: 100px;
        height: 100px;
        background: #fff1f2;
        color: #fb7185;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 30px;
        position: relative;
    }

        .icon-container::after {
            content: '';
            position: absolute;
            width: 120px;
            height: 120px;
            border: 2px dashed #fb7185;
            border-radius: 50%;
            opacity: 0.3;
            animation: rotate 10s linear infinite;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    h1 {
        color: #1a1a1a;
        font-weight: 800;
        font-size: 2rem;
        margin-bottom: 15px;
    }

    p {
        color: #666;
        line-height: 1.6;
        margin-bottom: 35px;
    }

    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-back {
        background: #7c4dff;
        color: white;
        text-decoration: none;
        padding: 14px 28px;
        border-radius: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-back:hover {
            background: #6a3de8;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(124, 77, 255, 0.3);
            color: white;
        }

    .btn-outline {
        background: transparent;
        color: #7c4dff;
        border: 2px solid #7c4dff;
        text-decoration: none;
        padding: 12px 28px;
        border-radius: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline:hover {
            background: #f0f3ff;
        }

    .status-code {
        position: absolute;
        bottom: 20px;
        font-size: 0.8rem;
        color: #ccd3e0;
        letter-spacing: 2px;
        font-weight: 700;
    }
</style>

<div class="error-card">
    <div class="icon-container">
        <i class="bi bi-shield-lock-fill"></i>
    </div>

    <h1>Access Denied</h1>
    <p>
        Oops! It looks like you don't have permission to view this page.
        If you think this is a mistake, please contact your administrator.
    </p>

    <div class="btn-group">
 
        <a href="javascript:history.back()" class="btn-outline">
            Go Back
        </a>
    </div>
</div>

<div class="status-code">ERROR 403</div>